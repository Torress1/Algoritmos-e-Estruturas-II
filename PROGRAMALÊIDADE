#include <stdio.h>


int ler (){
    int i;
    printf ("Digite a idade (0 a 110):");
    scanf ("%d", &i);
    while (i< 0 || i > 110){
        printf ("Digite a idade (0 a 110):");
        scanf ("%d", &i);
    }
    return i;
        }
int main(){
  int id1, id2;
  id1= ler();
  id2= ler();
  
  printf("dif""%d", id1 - id2);
  return 0;
}

